{
  "name": "yocto_erp",
  "version": "1.0.0",
  "description": "Simple lite ERP Management ",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "clean-log": "rimraf logs && mkdir logs",
    "build": "babel app --out-dir dist && ncp app/template dist/template && ncp certificate dist/certificate",
    "start": "env-cmd nodemon --exec babel-node app/server.js",
    "serve": "node dist/server.js",
    "test": "mocha --recursive --timeout 10000 --exit",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "ERP",
    "LNC"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:yocto-erp/backend.git"
  },
  "author": "Le Phuoc Canh",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
    "exceljs": "^4.1.0",
    "express": "^4.17.1",
    "fs": "^0.0.2",
    "google-libphonenumber": "^3.2.10",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "lodash.merge": ">=4.6.2",
    "mailgun.js": "^2.0.1",
    "md5": "^2.2.1",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.4.10",
    "numeral": "^2.0.6",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "randomstring": "^1.1.5",
    "sequelize": "^6.2.4",
    "uuid": "^8.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-watch": "^4.0.2",
    "mocha": "^8.0.1",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "app/**/*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**"
    ],
    "all": true
  }
}
